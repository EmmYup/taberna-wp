.chilometro
	display: block	
	+for_breakpoint(mobile)
		display: none
	.chilometro-barra
		width: 700px
		margin 0 auto
		padding-bottom 50px
		position relative
		&:before
			content ""
			display: block
			width 55px
			height 50px
			position absolute
			left -55px
			top -20px
			background-image: url("../images/src/bajo-chile.png")
			background-repeat: no-repeat
			background-size: cover
		&:after
			content ""
			display: block
			width: 55px
			height 50px
			top: -20px
			right -55px
			position: absolute
			background-image: url("../images/src/alto-chile.png")
			background-repeat: no-repeat
			background-size: cover
			
			
			
	.picante
		display inline-block
		position: relative
		float left
		margin-right 5px
		.barra
			width: 94px
			height 6px
			display: block
			margin-left 2px
			position relative
			& + .texto-barra
				visibility hidden
				font-size 10px
				font-weight 300
				color: #fff
				width: 100%
				text-align: center
				position: relative
				top 10px
				display: block
				
			&:after
				content ""
				width: 18px
				height 18px
				display: block
				position: absolute
				background-color: #FFF
				left 50%
				top 50%
				transform translateY(-50%) translateX(-50%)
				border-radius 50%
				visibility hidden
				
			&:before
				content ""
				position: absolute
				width: 22px
				height 22px
				display: block
				background-color: transparent
				border 1px solid #fff
				border-radius 50%
				left 50%
				top 50%
				transform translateY(-50%) translateX(-50%)
				visibility hidden
				
			&:hover
				cursor: pointer
				&:before, &:after
					visibility visible
				& + .texto-barra
					visibility visible
		&:not(.picante-nivel1, .picante-nivel6)
			.barra
				& + .texto-barra
					font-size 11px
		
				
					
