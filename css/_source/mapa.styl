.mapa-contenedor
	position relative
	.direcciones
		height 376px
		width 376px
		background-color $amarillo	
		position absolute
		z-index: 1000
		border-radius 50%
		top 60px
		left 115px
		+for_breakpoint(mobile)
			top 0
			left 0 
			border-radius 0
			width: 100%
			height 268px
			z-index 99
		.clear-30
			+for_breakpoint(mobile)
				height 15px
		.clear-60
			+for_breakpoint(mobile)
				display: none
		.sucursales
			.sucursal
				text-align: center
		.social-sucursales
			text-align: center
			a
				margin-right 5px
				img
					width 29px
		.hashtag
			font-size 21px
			font-weight 300
			color $azul
			text-align: center
			margin-top 6px
