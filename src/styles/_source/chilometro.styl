.chilometro
	display: block	
	.chilometro-barra
		width: 700px
		margin 0 auto
		padding-bottom 20px
		position relative
		&:before
			content ""
			display: block
			width 55px
			height 50px
			position absolute
			left -55px
			top -20px
			background-image: url("../../images/src/bajo-chile.png")
			background-repeat: no-repeat
			background-size: cover
		&:after
			content ""
			display: block
			width: 55px
			height 50px
			top: -20px
			right -35px
			position: absolute
			background-image: url("../../images/src/alto-chile.png")
			background-repeat: no-repeat
			background-size: cover
			
			
	.picante
		display inline-block
		.barra
			width: 94px
			height 3px
			display: block
			margin-left 2px
			position relative
			&:after
				content ""
				width: 18px
				height 18px
				display: block
				position: absolute
				background-color: #FFF
				left 50%
				top 50%
				transform translateY(-50%) translateX(-50%)
				border-radius 50%
				visibility hidden
				
			&:before
				content ""
				position: absolute
				width: 22px
				height 22px
				display: block
				background-color: transparent
				border 1px solid #fff
				border-radius 50%
				left 50%
				top 50%
				transform translateY(-50%) translateX(-50%)
				visibility hidden
				
			&:hover
				cursor: pointer
				&:before, &:after
					visibility visible
				
					
		&.picante-nivel1
			.barra
				background-color: #79bb43
		&.picante-nivel2
			.barra
				background-color: #bbd132
		&.picante-nivel3
			.barra
				background-color: #e4e119
		&.picante-nivel4
			.barra
				background-color: #fbba13
		&.picante-nivel5
			.barra
				background-color: #f5921e
		&.picante-nivel6
			.barra
				background-color: #ef5c24
		&.picante-nivel7
			.barra
				background-color: #e91f26
				