.post-blog
	padding 30px 0
	position relative
	.section-post
		color $azul
		font-size 41px
		font-weight 100
		text-transform: uppercase
		margin-bottom 30px
		strong
			font-weight 700
	.post
		+for_breakpoint(mobile)
			padding-bottom 10px
		.image-post
			position relative
			img
				width 100%
			&:after
				content ""
				display block
				width 13px
				height: 153px
				background-color $amarillo
				position absolute
				top 0
				right 0
				
		.title-post
			font-size 23px
			font-weight 700
			color $azul
			margin 20px 0 30px 0
			a
				color $azul
		.description-post
			font-size 15px
			font-weight 200
			color $azul
			text-align justify
			margin-bottom 15px
		.social-links-post
			a
				font-size 15px
				color $azul
				margin-right 15px