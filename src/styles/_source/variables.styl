media_queries = {
  mobile  : "only screen and (max-width: 768px)",
  tablet  : "only screen and (min-width: 769px) and (max-width: 992px)",
  desktop : "only screen and (min-width: 992px) and (max-width: 1200px)",
  bigDestop:"only screen and (min-width:1201px)",
  extraBigDesktop: "only screen and (min-width: 1400px)"
}
for_breakpoint(breakpoints)
  conditions = ()
  for breakpoint in breakpoints
    push(conditions, media_queries[breakpoint])
  conditions = join(", ", conditions)
  @media conditions
    {block}
